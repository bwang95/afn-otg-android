<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="100"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:paddingTop="20dp"
    android:paddingBottom="15dp"
    android:background="@drawable/home_button_background">

    <ImageView
        android:id="@+id/iv_hs_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
        android:scaleType="centerInside"
        android:src="@drawable/ic_plusone_tall_off_client"
        />

    <TextView
        android:id="@+id/tv_hs_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:text="Test"
        android:gravity="center"
        android:paddingTop="10dp"
        android:textColor="@color/afn_light_blue"
        android:textSize="@dimen/small_header"/>

</LinearLayout>